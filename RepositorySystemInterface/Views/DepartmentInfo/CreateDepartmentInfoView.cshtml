<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../layuimini/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="../layuimini/css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="layui-form layuimini-form">

        <div class="layui-form-item">
            <label class="layui-form-label required">部门ID</label>
            <div class="layui-input-block">
                <input type="text" name="departmentInfoId" lay-verify="required" lay-reqtext="部门ID不能为空" placeholder="请输入部门ID" value="" class="layui-input">
                <tip>请输入部门ID。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">部门描述</label>
            <div class="layui-input-block">
                <input type="text" name="description" lay-verify="required" lay-reqtext="部门描述不能为空" placeholder="请输入部门描述" value="" class="layui-input">
                <tip>填写部门描述信息。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">部门名字</label>
            <div class="layui-input-block">
                <input type="text" name="departmentName" lay-verify="required" lay-reqtext="部门名字不能为空" placeholder="请输入部门名字" value="" class="layui-input">
                <tip>填写部门名字。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">主管ID</label>
            <div class="layui-input-block">
                <input type="text" name="leaderId" lay-verify="required" lay-reqtext="主管ID不能为空" placeholder="请输入主管ID" value="" class="layui-input">
                <tip>填写主管ID。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">父部门ID</label>
            <div class="layui-input-block">
                <input type="text" name="parentId" lay-verify="required" lay-reqtext="父部门ID不能为空" placeholder="请输入父部门ID" value="" class="layui-input">
                <tip>填写父部门ID。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认保存</button>
            </div>
        </div>
    </div>
    <script src="../layuimini/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>

        // 刷新父页面的表格函数
        function reloadParentTable() {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
            parent.layui.table.reload('currentTableId');
        }


    layui.use(['form'], function () {
        var form = layui.form,
            layer = layui.layer,
            $ = layui.$;

        //监听提交
        form.on('submit(saveBtn)', function (data) {

            $.ajax({
                url: "/DepartmentInfo/CreateDepartmentInfo",
                type: "Post",
                data: {
                    id: data.field.departmentInfoId,
                    description: data.field.description,
                    departmentName: data.field.departmentName,
                    leaderId: data.field.leaderId,
                    parentId: data.field.parentId,

                },
                success: function (res) {
                    if (res.code == 200) {
                        var index = layer.alert(res.msg, {
                            title: '最终的提交信息'
                        }, function () {

                            // 关闭弹出层
                            layer.close(index);

                            reloadParentTable();

                            var iframeIndex = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(iframeIndex);
                        });
                    } else {
                        layer.alert(res.msg);
                    }

                }

            });
            return false;
        });

    });
    </script>
</body>
</html>